{
  "name": "nishyan",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "imports": {
    "#*": "./src/*"
  },
  "scripts": {
    "build": "run-s build:*",
    "build:icons": "tsx ./src/utils/build-icons.ts",
    "build:server": "tsc && vite build",
    "predev": "pnpm run build:icons --silent",
    "dev": "vite",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --cache --cache-location 'node_modules/.cache/.eslintCache' --max-warnings 0 --fix",
    "format": "prettier . --write --ignore-path .prettierignore",
    "preview": "vite preview"
  },
  "eslintIgnore": [
    "node_modules/",
    "pnpm-lock.yaml"
  ],
  "dependencies": {
    "clsx": "^2.1.0",
    "execa": "^8.0.1",
    "glob": "^10.3.10",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.2.0"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.7",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.10.7",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "fs-extra": "^11.2.0",
    "node-html-parser": "^6.1.12",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.33",
    "prettier": "^3.1.1",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.7.0",
    "typescript": "^5.2.2",
    "vite": "^5.0.8"
  }
}